<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_splash"
        style="@style/splashbackcolor">

    <ImageView
            android:id="@+id/imgSplashBottom"
            android:layout_width="424dp"
            android:layout_height="187dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/splashbottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="264dp"
            android:layout_height="93dp"
            app:srcCompat="@drawable/splashtitle"
            android:id="@+id/imgSplashTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toTopOf="@+id/imgSplashBottom"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgSplashLogo"
            app:layout_constraintVertical_bias="0.0"/>

    <ImageView
            android:layout_width="197dp"
            android:layout_height="207dp"
            app:srcCompat="@drawable/logomcdelacruz"
            android:id="@+id/imgSplashLogo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="205dp"
            android:orientation="vertical"/>
</android.support.constraint.ConstraintLayout>